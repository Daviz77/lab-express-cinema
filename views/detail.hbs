
<div class="movie-detail">
<a class="button-details" href="/movies">Go back</a>
<img src="{{movie.image}}" alt="movie image">
<h1>{{movie.title}}</h1>
<h2>Director: {{movie.director}}</h2>
<h3>
    Stars
</h3>
<ul>
    {{#each movie.stars}}
    <li>{{this}}</li>
    {{/each}}
</ul>
<p>{{movie.description}}</p>

{{#each movie.showtimes}}
<li>{{this}}</li>
{{/each}}
</div>